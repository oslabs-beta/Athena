/*
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "Athena",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "src/assets/**/*"
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "icon": {
      "16x16": "src/assets/icon-16x16.png",
      "32x32": "src/assets/icon-32x32.png",
      "64x64": "src/assets/icon-64x64.png",
      "128x128": "src/assets/icon-128x128.png",
      "256x256": "src/assets/icon-256x256.png",
      "512x512": "src/assets/icon-512x512.png"
    },
    "target": [
      "dmg",
      "zip"
  ]
  },
"win": {
  "target": [
    {
      "target": "nsis",
      "arch": [
        "x64"
      ]
    }
  ],
  "artifactName": "${productName}_${version}.${ext}",
  "icon": {
    "16x16": "src/assets/icon-16x16.png",
    "24x24": "src/assets/icon-24x24.png",
    "32x32": "src/assets/icon-32x32.png",
    "48x48": "src/assets/icon-48x48.png",
    "64x64": "src/assets/icon-64x64.png",
    "128x128": "src/assets/icon-128x128.png",
    "256x256": "src/assets/icon-256x256.png"
  }
},
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": {
    "provider": "generic",
    "channel": "latest",
    "url": "Athena_URL"
  }
}